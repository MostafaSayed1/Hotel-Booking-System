@model IEnumerable<MVCBookingFinal_YARAB_.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<style>
    .countries-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 0;
        margin: 40px auto;
        overflow: hidden;
        width:80%;
    }

    .page-title {
        background: #1a374d;
        color: white;
        padding: 25px 30px;
        margin: 0;
        font-size: 24px;
        font-weight: 500;
    }

    .table-container {
        padding: 20px 30px;
    }

    .countries-table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
    }

        .countries-table th {
            padding: 15px 10px;
            color: #666;
            font-weight: 500;
            text-align: left;
            border-bottom: 1px solid #eee;
            font-size: 14px;
        }

        .countries-table td {
            padding: 20px 10px;
            vertical-align: middle;
            border-bottom: 1px solid #eee;
            color: #333;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .countries-table tr:hover td {
            background: #f8f9fa;
        }

    .country-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
        box-shadow: 0 4px 12px rgba(0, 150, 255, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .country-image:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 16px rgba(0, 150, 255, 0.3);
        }

    .create-btn {
        background: #1a374d;
        color: white;
        padding: 12px 24px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .create-btn:hover {
            background: #142c3c;
            color: white;
        }

    .country-action-split {
        display: inline-flex;
        border-radius: 4px;
        overflow: visible;
        position: relative;
    }

    .country-action-main {
        background: #1a374d;
        color: white;
        height: 38px;
        padding: 0 16px;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        text-decoration: none;
        transition: background 0.2s;
        border-radius: 4px 0 0 4px;
    }

        .country-action-main:hover {
            background: #142c3c;
            color: white;
            text-decoration: none;
        }

    .country-action-dropdown {
        position: relative;
        height: 38px;
    }

    .country-action-menu {
        display: none;
        position: absolute;
        right: 0;
        top: 38px;
        background: white;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        border-radius: 4px;
        min-width: 160px;
        z-index: 1000;
    }

        .country-action-dropdown:hover .country-action-menu,
        .country-action-menu:hover {
            display: block;
        }

    .country-action-item {
        padding: 12px 16px;
        color: #333;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        transition: all 0.2s;
        border-bottom: 1px solid #eee;
    }

        .country-action-item:last-child {
            border-bottom: none;
        }

        .country-action-item:hover {
            background: #f8f9fa;
        }

    .country-action-edit:hover {
        color: #28a745;
    }

    .country-action-delete:hover {
        color: #dc3545;
    }

    .country-action-trigger {
        background: #1a374d;
        color: white;
        padding: 0 12px;
        border: none;
        border-left: 1px solid rgba(255,255,255,0.2);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 38px;
        transition: background 0.2s;
        border-radius: 0 4px 4px 0;
    }

        .country-action-trigger:hover {
            background: #142c3c;
        }


    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
    }

    .modal-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: auto;
        height: auto;
        max-width: 450px;
        max-height: 450px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
        animation: modalOpen 0.3s ease-out;
    }

    @@keyframes modalOpen {
        from

    {
        transform: translate(-50%, -50%) scale(0.95);
        opacity: 0;
    }

    to {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }

    }

    .modal-close {
        position: absolute;
        right: calc(50% - 240px);
        top: calc(50% - 240px);
        color: #fff;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        z-index: 1001;
        background: rgba(0, 0, 0, 0.5);
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .modal-close:hover {
            color: #bbb;
        }

    .page-header {
        background: #1a374d;
        color: white;
        padding: 20px 30px;
        margin: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        background: transparent;
        padding: 0;
        margin: 0;
        font-size: 24px;
        font-weight: 500;
    }

    .create-btn {
        background: #28a745;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .create-btn:hover {
            background: #218838;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.2);
        }
</style>

<div class="header-section" style="padding: 0 0 20px 0; margin-bottom: 20px; border-bottom: 1px solid #eee;">
</div>
<div class="countries-container">
    <div class="page-header">
        <h1 class="page-title">All countries</h1>
        @if (User.IsInRole("ADMIN"))
        {
            <a asp-action="Create" class="create-btn">
                <i class="fas fa-plus"></i>
                Add New country
            </a>
        }
    </div>
    <div class="table-container">

        <table class="countries-table table-striped">
            <thead>
                <tr>
                    <th>Country Name</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <img src="~/ProductsImages/@item.Image" class="country-image" alt="@item.Name" onclick="openModal(this.src)" />
                        </td>
                        <td>
                            <div class="country-action-split">
                                <a asp-action="Details" asp-route-id="@item.Id" class="country-action-main">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                                <div class="country-action-dropdown">
                                    <button class="country-action-trigger">
                                        <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                                    </button>
                                    @if (User.IsInRole("ADMIN")){
                                    <div class="country-action-menu">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="country-action-item country-action-edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="country-action-item country-action-delete">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div id="imageModal" class="modal">
    <span class="modal-close" onclick="closeModal()">&times;</span>
    <img class="modal-content" id="modalImage">
</div>

<script>
    function openModal(imgSrc) {
        const modal = document.getElementById("imageModal");
        const modalImg = document.getElementById("modalImage");
        modal.style.display = "block";
        modalImg.src = imgSrc;
    }

    function closeModal() {
        document.getElementById("imageModal").style.display = "none";
    }

    // Close modal when clicking outside the image
    window.onclick = function(event) {
        const modal = document.getElementById("imageModal");
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>