@model IEnumerable<MVCBookingFinal_YARAB_.Models.Room>
@{
    ViewData["Title"] = "Index";
    // Layout = "_MyLayout";
}
<div class="container mb-5">
    @if (User.IsInRole("ADMIN"))
    {
        <div class="admin-actions mb-4">
            <a asp-action="Create" class="create-btn">
                <i class="fas fa-plus-circle"></i>
                Create New Room
            </a>
        </div>
    }

    <div class="rooms-grid">
        @foreach (var room in Model)
        {
            <div class="room-card">
                <div class="room-image">
                    <img src="~/ProductsImages/@room.Images.FirstOrDefault().Image"
                         class="img-clickable"
                         data-bs-toggle="modal"
                         data-bs-target="#imageModal" />
                    <div class="room-status @(room.Status)">
                        <span>@room.Status</span>
                    </div>
                </div>

                <div class="room-details">
                    <div class="room-type">
                        <h3>@room.roomType</h3>
                        <div class="room-price">
                            <span class="price-amount">$@room.PricePerNight</span>
                            <span class="price-period">per night</span>
                        </div>
                    </div>

                    <div class="room-info">
                        <div class="info-item">
                            <i class="fas fa-users"></i>
                            <span>Capacity: @room.Capacity persons</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-building"></i>
                            <span>Floor: @room.Floor</span>
                        </div>
                    </div>

                    <div class="room-actions">
                        <a asp-action="Details" asp-route-id="@room?.Id" class="action-btn details-btn">
                            <i class="fas fa-info-circle"></i>
                            Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@room?.Id" class="action-btn edit-btn">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@room?.Id" class="action-btn delete-btn">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .rooms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .room-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        }

    .room-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

        .room-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .room-image:hover img {
            transform: scale(1.1);
        }

    .room-status {
        position: absolute;
        top: 1rem;
        right: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        text-transform: uppercase;
    }

        .room-status.available {
            background: #28a745;
            color: white;
        }

        .room-status.occupied {
            background: #dc3545;
            color: white;
        }

    .room-details {
        padding: 1.5rem;
    }

    .room-type {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

        .room-type h3 {
            font-size: 1.25rem;
            color: #1a374d;
            margin: 0;
        }

    .room-price {
        text-align: right;
    }

    .price-amount {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1a374d;
    }

    .price-period {
        display: block;
        font-size: 0.85rem;
        color: #6c757d;
    }

    .room-info {
        margin: 1rem 0;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0.5rem 0;
        color: #495057;
    }

        .info-item i {
            color: #1a374d;
        }

    .room-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .action-btn {
        flex: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem;
        border-radius: 8px;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .details-btn {
        background: #17a2b8;
        color: white;
    }

    .edit-btn {
        background: #1a374d;
        color: white;
    }

    .delete-btn {
        background: #dc3545;
        color: white;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        color: white;
        filter: brightness(110%);
    }

    .create-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #28a745;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .create-btn:hover {
            background: #218838;
            color: white;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .rooms-grid

    {
        grid-template-columns: 1fr;
    }

    }
</style>